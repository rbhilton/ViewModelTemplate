@model IEnumerable<ViewModelTemplate.Models.Customer>

@{
    ViewBag.Title = "customer";
}

<h2>customer</h2>

<p>
    @Html.ActionLink("Home","Index","Home")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustStreet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustZip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustBal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustStreet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustZip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustBal)
        </td>
        <td>
            @Html.ActionLink("View Orders", "Orders", new { id =item.CustNo }) 
        </td>
    </tr>
}

</table>
